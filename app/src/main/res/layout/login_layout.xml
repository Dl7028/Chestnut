<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds40"
        android:gravity="center_vertical"
        android:background="@drawable/gray_radiu_20_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/ds15"
            android:layout_height="@dimen/ds15"
            android:layout_marginLeft="@dimen/sp16"
            android:src="@mipmap/login_login_icon" />

        <EditText
            android:id="@+id/login_phone_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ds12"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="number"
            android:hint="请输入用户名"
            android:textColor="@color/color_333333"
            android:textColorHighlight="@color/color_c9c9c9"
            android:textSize="@dimen/sp14">
            <requestFocus />
        </EditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds40"
        android:layout_marginTop="@dimen/sp18">

            <ImageView
                android:id="@+id/login_password_image"
                android:layout_width="@dimen/ds15"
                android:layout_height="@dimen/ds15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/sp16"
                android:src="@mipmap/login_password_icon" />


            <EditText
                android:id="@+id/login_pass_word_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/ds12"
                android:layout_toRightOf="@id/login_password_image"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="短信验证码"
                android:inputType="textPassword"
                android:textColor="@color/color_333333"
                android:textColorHighlight="@color/color_c9c9c9"
                android:textSize="@dimen/sp14" />
        </RelativeLayout>
</merge>