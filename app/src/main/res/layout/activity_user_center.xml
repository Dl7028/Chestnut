<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.mine.usercenter.UserCenterActivity">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds50"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/personal_back"
                    android:layout_width="@dimen/ds50"
                    android:layout_height="@dimen/ds50"
                    android:gravity="center_vertical"
                    android:padding="@dimen/ds15"
                    android:src="@mipmap/back_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="用户中心"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds6"
            android:background="@drawable/top_line_bg"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout7" />

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_radiu_8_bg"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

            <LinearLayout
                android:id="@+id/edit_avaer_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/personal_image"
                    android:layout_width="@dimen/ds45"
                    android:layout_height="@dimen/ds45"
                    android:layout_margin="@dimen/ds13"
                    android:src="@mipmap/picture_error_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/ds2"
                    android:layout_marginEnd="@dimen/ds15"
                    android:gravity="center_vertical"
                    android:text="更换头像"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14"
                    app:drawableEndCompat="@mipmap/goto_icon" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds1"
                android:layout_marginLeft="@dimen/ds15"
                android:layout_marginRight="@dimen/ds15"
                android:background="@color/color_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ds15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/personal_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/ds10"
                    android:gravity="center_vertical"
                    android:text="立即添加"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14"
                    app:drawableEndCompat="@mipmap/goto_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds1"
                android:layout_marginLeft="@dimen/ds15"
                android:layout_marginRight="@dimen/ds15"
                android:background="@color/color_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ds15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="邮箱"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/personal_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="123@qq.com"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds1"
                android:layout_marginLeft="@dimen/ds15"
                android:layout_marginRight="@dimen/ds15"
                android:background="@color/color_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ds15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="用户名"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/personal_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/ds10"
                    android:gravity="center_vertical"
                    android:text="123@qq.com"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14"
                    app:drawableEndCompat="@mipmap/goto_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds1"
                android:layout_marginLeft="@dimen/ds15"
                android:layout_marginRight="@dimen/ds15"
                android:background="@color/color_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/ds15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="昵称"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/personal_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="@dimen/ds10"
                    android:gravity="center_vertical"
                    android:text="立即添加"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp14"
                    app:drawableEndCompat="@mipmap/goto_icon" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds1"
                android:layout_marginLeft="@dimen/ds15"
                android:layout_marginRight="@dimen/ds15"
                android:background="@color/color_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ds1"
                android:layout_marginLeft="@dimen/ds15"
                android:layout_marginRight="@dimen/ds15"
                android:background="@color/color_line" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/personal_editpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_radiu_8_bg"
            android:padding="@dimen/ds15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="修改密码"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp14"
                app:drawableEndCompat="@mipmap/goto_icon" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>