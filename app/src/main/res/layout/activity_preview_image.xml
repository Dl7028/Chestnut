<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/big_image_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds50"
            android:layout_marginTop="@dimen/ds30">

            <ImageView
                android:id="@+id/big_image_back"
                android:layout_width="@dimen/ds50"
                android:layout_height="@dimen/ds50"
                android:padding="@dimen/ds15"
                android:src="@mipmap/white_back_icon" />

            <TextView
                android:id="@+id/bigimage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="预览图片"
                android:textColor="@color/white"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/bigImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/picture_error_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <include layout="@layout/bigimage_bottom_layout" />
    </LinearLayout>
</RelativeLayout>